{% extends 'base.html.twig' %}

{% block page_title 'My cart' %}

{% block page %}
    {% if cart|length > 0 %}
        {% for book, quantity in cart.books %}
            <div class="row" id="cart-book-{{ book.id }}">
                <div class="col-md-3 col-lg-1 mb-3">
                    <img src="{{ asset(book.image) }}" class="img-fluid" />
                </div>

                <div class="col-md-9 col-lg-11 mb-3">
                    <strong>
                        {{ book.title }} x{{ quantity }}
                    </strong>

                    <p>
                        {{ book.description }}
                    </p>

                    <div class="row">
                        <div class="col-md-auto">
                            <a href="{{ path('my_cart_remove', {'id': book.id}) }}" class="btn btn-danger">
                                Remove
                            </a>
                        </div>

                        {% set discountStartAtQuantity = 5 %}
                        <div class="col-md">
                            <form method="get" action="{{ path('my_cart_set_quantity', {'id': book.id}) }}" class="form-inline"
                                {{ stimulus_controller('cart', { discountStartAtQuantity}) }}
                            >
                                <div class="d-flex">
                                    <div>
                                        <select
                                            class="form-control"
                                            name="quantity"
                                            data-cart-target="quantity"
                                            data-action="change->cart#updateQuantity"
                                        >
                                            {% for i in 1..10 %}
                                                <option value="{{ i }}" {{ i == quantity ? 'selected' }}>{{ i }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div>
                                        <button type="submit" class="btn btn-secondary ms-1">
                                            Update quantity
                                        </button>
                                    </div>
                                    <div>
                                        There is a discount if you buy more than {{ discountStartAtQuantity }} books!
                                        <button
                                            type="button"
                                            class="btn btn-secondary ms-1"
                                            data-action="click->cart#iWantTheDiscount"
                                        >
                                            I want the discount!
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="my-5 text-center">
            Your cart is currently empty.
        </div>
    {% endif %}
{% endblock %}
