{% extends 'base.html.twig' %}

{% block page_title 'Books' %}

{% block page %}
    <div class="row">
        {% for book in books %}
            <div class="col-lg-2 mb-3 position-relative">
                {{ async_image(book.image) }}

                <a href="{{ path('book_view', {'id': book.id}) }}" class="stretched-link">
                    <strong>
                        {{ book.title }}
                    </strong>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
